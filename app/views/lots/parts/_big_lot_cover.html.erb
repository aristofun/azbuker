<%
   cover ||= big_book.book_cover(:x300)
   cover_original ||= big_book.book_cover(:original)
   show_lightbox ||= false
%>
<ul class="media-grid">
  <li>
    <%= link_to(
                image_tag(
                        cover, :class => "book-cover300 thumbnail",
                        :alt => "Книга #{big_book.title}"),
                (show_lightbox) ? cover_original : book_path(big_book.id),
                :class => (show_lightbox) ? 'fancybox' : ''
        ) -%>
    <!--class="fancybox" rel="group"-->
  </li>
</ul>
